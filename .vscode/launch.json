{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Debug Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "ENVIRONMENT": "local"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "FastAPI: Debug with run.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "ENVIRONMENT": "local"
            }
        },
        {
            "name": "FastAPI: Debug (Azure Mode)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "ENVIRONMENT": "azure"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Script: Create Admin User",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/create_admin_user.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Script: Test Batch Processor",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/test_batch_processor.py",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}